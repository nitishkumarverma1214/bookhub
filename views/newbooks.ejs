<% include partials/header %>
<div style="text-align:center">
<div class="row">
<h1>
	Give the Information of the books here...
</h1>
<div style="width:30%; margin: 25px auto">
<form action="/books" method="POST">
	<div class="form-group">
	<input class="form-control" type="text" name="name" placeholder="name of the book">
		
	</div>
	<div class="form-group">
	<input class="form-control" type="text" name="image" placeholder="book image url">
	</div>
	<div class="form-group">
	<textarea class="form-control" type="text" name="description" placeholder="enter the description" rows="10" cols="20"></textarea>
	</div>
	<div class="form-group">
	<input class="btn btn-lg btn-primary btn-block" type="submit">
	</div>
</form>

	
</div>
</div>
<a href="/">Go Back</a>
</div>
