<% include partials/header %>
<div style="text-align:center">
<div class="row">
<h1>
	Edit book <%=book.name%>
</h1>
<div style="width:30%; margin: 25px auto">
<form action="/books/<%=book._id%>?_method=PUT" method="POST">
	<div class="form-group">
	<input class="form-control" type="text" name="book[name]" value="<%=book.name %>">
		
	</div>
	<div class="form-group">
	<input class="form-control" type="text" name="book[image]" value="<%= book.image%>">
	</div>
	<div class="form-group">
	<textarea class="form-control" type="text" name="book[description]" value="<%=book.description%>" rows="10" cols="20"></textarea>
	</div>
	<div class="form-group">
	<input class="btn btn-lg btn-primary btn-block" type="submit">
	</div>
</form>

	
</div>
</div>
<a href="/">Go Back</a>
</div>
<% include partials/footer %>
